include $(GNUSTEP_MAKEFILES)/common.make

VERSION = 0.1
PACKAGE_NAME = TimeInterval
BUNDLE_NAME = TimeInterval
TimeInterval_PRINCIPAL_CLASS = TimeInterval
BUNDLE_EXTENSION = .bundle
BUNDLE_INSTALL_DIR = $(GNUSTEP_BUNDLES)/@PROJECT_NAME@

#
# Additional libraries
#

ifeq ($(FOUNDATION_LIB), apple)
  LDFLAGS += -F../Triva -framework @PROJECT_NAME@ -framework General
else
  TimeSliceAggregation_BUNDLE_LIBS += -l@PROJECT_NAME@ -lGeneral
  ADDITIONAL_LIB_DIRS += -L../Triva/@PROJECT_NAME@.framework/Versions/Current
endif

#
# Resource files
#
TimeInterval_RESOURCE_FILES = \
Resources/TimeInterval.gorm \


#
# Header files
#
TimeInterval_HEADER_FILES = \
TimeInterval.h \
SliceView.h

#
# Class files
#
TimeInterval_OBJC_FILES = \
TimeInterval.m \
SliceView.m

TimeInterval_INCLUDE_DIRS += -I../ -I./

#
# Makefiles
#
-include GNUmakefile.preamble
include $(GNUSTEP_MAKEFILES)/aggregate.make
include $(GNUSTEP_MAKEFILES)/bundle.make
-include GNUmakefile.postamble
