include $(GNUSTEP_MAKEFILES)/common.make

AGGREGATE_NAME = @PACKAGE_TARNAME@
TOOL_NAME = @PACKAGE_TARNAME@
PACKAGE_NAME = @PACKAGE_TARNAME@
VERSION = @PACKAGE_VERSION@
SUBPROJECTS = @PROJECTS@

@PACKAGE_TARNAME@_OBJCC_FILES = \
	TrivaApp.mm \
	TrivaPajeComponent.mm \
	TrivaWindow.mm \
	TrivaWindowAuto.mm

ifeq ($(FOUNDATION_LIB), apple)
LDFLAGS += -F./Triva -framework Triva
else
LDFLAGS += -L./Triva/Triva.framework -lTriva
endif
	
@PACKAGE_TARNAME@_INCLUDE_DIRS += @CPPFLAGS@
@PACKAGE_TARNAME@_LIB_DIRS += @LIBS@
@PACKAGE_TARNAME@_LDFLAGS += -lGeneral


include $(GNUSTEP_MAKEFILES)/aggregate.make
include $(GNUSTEP_MAKEFILES)/tool.make

