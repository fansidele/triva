include $(GNUSTEP_MAKEFILES)/common.make

VERSION = 0.1
PACKAGE_NAME = SquarifiedTreemap
BUNDLE_NAME = SquarifiedTreemap
SquarifiedTreemap_PRINCIPAL_CLASS = SquarifiedTreemap
BUNDLE_EXTENSION = .bundle
BUNDLE_INSTALL_DIR = $(GNUSTEP_BUNDLES)/Triva

ifeq ($(FOUNDATION_LIB), apple)
  LDFLAGS += -F../Triva -framework Triva -framework General
  ADDITIONAL_INCLUDE_DIRS += -framework Renaissance
  ADDITIONAL_GUI_LIBS += -framework Renaissance
else
  ADDITIONAL_LIB_DIRS += -L../Triva/Triva.framework/Versions/Current
  ADDITIONAL_GUI_LIBS += -lRenaissance
endif

SquarifiedTreemap_RESOURCE_FILES = \
	SquarifiedTreemap.gsmarkup
SquarifiedTreemap_HEADER_FILES = SquarifiedTreemap.h TreemapView.h
SquarifiedTreemap_OBJC_FILES = SquarifiedTreemap.m TreemapView.m
SquarifiedTreemap_INCLUDE_DIRS += @CPPFLAGS@
SquarifiedTreemap_LDFLAGS += @LDFLAGS@

-include GNUmakefile.preamble
include $(GNUSTEP_MAKEFILES)/aggregate.make
include $(GNUSTEP_MAKEFILES)/bundle.make

after-distclean::
after-all::
after-clean:: 
