include $(GNUSTEP_MAKEFILES)/common.make

VERSION = 0.1
PACKAGE_NAME = GraphConfiguration
BUNDLE_NAME = GraphConfiguration
GraphConfiguration_PRINCIPAL_CLASS = GraphConfiguration
BUNDLE_EXTENSION = .bundle
BUNDLE_INSTALL_DIR = $(GNUSTEP_BUNDLES)/Triva

ifeq ($(FOUNDATION_LIB), apple)
  LDFLAGS += -F../Triva -framework Triva \
                        -framework General \
                        -F../Tupi/ -framework Tupi
  ADDITIONAL_INCLUDE_DIRS += -framework Renaissance
  ADDITIONAL_GUI_LIBS += -framework Renaissance
else
  ADDITIONAL_LIB_DIRS += -L../Triva/Triva.framework/Versions/Current \
                         -L../Tupi/Tupi.framework/Versions/Current
  ADDITIONAL_GUI_LIBS += -lRenaissance
endif

GraphConfiguration_RESOURCE_FILES = \
  GraphConfiguration.gsmarkup \
  GraphConfiguration.plist
GraphConfiguration_HEADER_FILES = GraphConfiguration.h
GraphConfiguration_OBJC_FILES = \
GraphConfiguration.m \
GraphConfiguration+Interface.m \
GraphConfiguration+Protocol.m

GraphConfiguration_INCLUDE_DIRS += -I../ -I./ @CPPFLAGS@
GraphConfiguration_LDFLAGS += @LDFLAGS@ -lTupi

-include GNUmakefile.preamble
include $(GNUSTEP_MAKEFILES)/aggregate.make
include $(GNUSTEP_MAKEFILES)/bundle.make
-include GNUmakefile.postamble
