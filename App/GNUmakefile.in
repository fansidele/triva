include $(GNUSTEP_MAKEFILES)/common.make

APP_NAME = Triva

Triva_OBJC_FILES = \
	TrivaApp.m \
	TrivaCommand.m \
	TrivaController.m \
  TrivaController+Bundles.m \
  TrivaController+Chunks.m \
  TrivaController+Components.m \
  TrivaComparisonController.m \
  TrivaMergeController.m \
	TrivaServerSocket.m

Triva_APPLICATION_ICON = Triva.tiff
Triva_RESOURCE_FILES = Triva.tiff trivaInfo.plist Triva.plist

ifeq ($(FOUNDATION_LIB), apple)
LDFLAGS += -F../Triva -framework Triva -framework General -F../Tupi -framework Tupi
else
LDFLAGS += -L../Triva/Triva.framework -lTriva -lGeneral -L../Tupi/Tupi.framework/ -lTupi
endif
	
Triva_INCLUDE_DIRS += -I../ -I./ @CPPFLAGS@
Triva_LDFLAGS += @LDFLAGS@ 

include $(GNUSTEP_MAKEFILES)/application.make
