include $(GNUSTEP_MAKEFILES)/common.make

APP_NAME = @PROJECT_NAME@
PACKAGE_NAME = @PROJECT_NAME@
VERSION = @PACKAGE_VERSION@

@PROJECT_NAME@_OBJC_FILES = \
	TrivaApp.m \
	TrivaCommand.m \
	TrivaController.m \
  TrivaController+Bundles.m \
  TrivaController+Chunks.m \
  TrivaController+Components.m

@PROJECT_NAME@_APPLICATION_ICON = Triva.tiff
@PROJECT_NAME@_RESOURCE_FILES = Triva.tiff trivaInfo.plist

ifeq ($(FOUNDATION_LIB), apple)
LDFLAGS += -F../Triva -framework @PROJECT_NAME@ -framework General
else
LDFLAGS += -L../Triva/@PROJECT_NAME@.framework -l@PROJECT_NAME@ -lGeneral
endif
	
@PROJECT_NAME@_INCLUDE_DIRS += -I../ -I./

include $(GNUSTEP_MAKEFILES)/application.make
