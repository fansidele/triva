include $(GNUSTEP_MAKEFILES)/common.make

APP_NAME = Triva

Triva_OBJC_FILES = \
	TrivaApp.m \
	TrivaCommand.m \
	TrivaController.m \
  TrivaController+Bundles.m \
  TrivaController+Chunks.m \
  TrivaController+Components.m

Triva_APPLICATION_ICON = Triva.tiff
Triva_RESOURCE_FILES = Triva.tiff trivaInfo.plist

ifeq ($(FOUNDATION_LIB), apple)
LDFLAGS += -F../Triva -framework Triva -framework General
else
LDFLAGS += -L../Triva/Triva.framework -lTriva -lGeneral
endif
	
Triva_INCLUDE_DIRS += -I../ -I./

include $(GNUSTEP_MAKEFILES)/application.make
